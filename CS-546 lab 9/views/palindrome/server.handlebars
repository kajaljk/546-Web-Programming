<div class="row">
    <div class="col-sm-12">
        <form class="server-form" method="post">
            <div class="form-group">
                <label for="palindromeText">Enter Text: </label>
                <textarea type="textarea" class="form-control" id="palindromeText" name="phrase" placeholder="Enter String Here" value="{{phrase}}"></textarea>
            </div>
            {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            </div>
            {{/if}}
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            {{#if result }}
            <div class="form-group">
                <div class="alert alert-success">
                    The result is: {{ result }}
                </div>
            </div>
            {{/if}}
        </form>
    </div>
</div>