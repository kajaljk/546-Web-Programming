<div class="row">
    <div class="col-sm-12">
        <form id="static-form" method="post">
            <div class="form-group">
                <label for="palindromeText">Enter Text: </label>
                <textarea class="form-control" id="palindromeText" name="phrase" placeholder="Enter String Here"></textarea>
            </div>
             <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here"></div>
            </div>
             <div class="form-group hidden" id="result-container">
                <div class="alert alert-success text-goes-here"></div>
            </div>
            <ol  id="attempts" type="A">
            </ol>
        </form>
    </div>
</div>